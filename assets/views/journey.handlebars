<script data-main="scripts/journey" src="bower_components/requirejs/require.js"></script>


<div class="container">

    <h2>Your Journey Options</h2>


    <div class="spinner" data-bind="if: waitingForData">
        <img src="images/spinner.gif" />
    </div>

    <div class="disambiguiation-content" data-bind="if: !waitingForData()">

        <div data-bind="with: journey" style="margin-bottom: 8px; ">
            <b>"<span data-bind="text: from"></span></b>" to "<b><span data-bind="text: to"></span></b>"
        </div>

        <div data-bind="foreach: sortedJourneys">

            <div class="col-xs-12 journey-container" data-bind="css: {expanded: visible}">
                <div class="left-container">
                    <h3 class="journey-title" data-bind="text: title"></h3>
                    <div class="more-details" data-bind="click: click">More Details</div>
                </div>
                <div class="journey-duration col-xs-3"><span class="minutes" data-bind="text: duration"></span><br/> minutes</div>
            </div>
            <div class="col-xs-12 journey-steps" style="display: table" data-bind="visible: visible">
                <!-- ko foreach: steps-->
                <div class="col-xs-12" style="display: table-row; padding-bottom: 3px;">

                    <div class="col-xs-4" style="display: table-cell"><span data-bind="text: transport"></span> (<span data-bind="text: mode"></span>)</div>
                    <div class="col-xs-8    " style="display:table-cell">
                        <span data-bind="text: destination"></span><br/>
                        <!--ko if: !offersExpanded() && offers.length > 1 -->
                        <b><span style="font-color: red;" data-bind="click: expandOffers">You have <span data-bind="text: offers.length"></span> offers</span></b>
                        <!-- /ko -->
                        <!--ko if: offersExpanded || offers.length === 1 -->
                        <!-- ko foreach: offers -->
                        <b><span style="font-color: red;" data-bind="text: $data"></span></b><br/>
                        <!-- /ko -->
                        <!-- /ko -->
                    </div><br/>
                </div>
                <!-- /ko -->
            </div>

        </div>

    </div>
</div>
