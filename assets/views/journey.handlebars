<script data-main="scripts/journey" src="bower_components/requirejs/require.js"></script>


<div class="container">

    <h1>Journey</h1>


    <div class="spinner" data-bind="if: waitingForData">SPINNER</div>

    <div class="disambiguiation-content" data-bind="if: !waitingForData()"><br/>

        <div data-bind="with: journey">
            From: <span data-bind="text: from"></span><br/>
            To: <span data-bind="text: to"></span>
        </div>

        <h2>Direct Journey</h2>

        <div data-bind="with: journeys()[0]">

            <div class="col-xs-10 col-xs-offset-1 journey-container">
                <div class="left-container">
                    <h3 class="journey-title">Direct</h3>
                    <div class="more-details" data-bind="click: click">More Details</div>
                </div>
                <div class="journey-duration col-xs-3"><span class="minutes" data-bind="text: duration"></span><br/> minutes</div>
            </div>
            <div class="col-xs-10 col-xs-offset-1 journey-steps">
                <span class="" data-bind="text: steps, visible: visible"></span>
            </div>

        </div>

    </div>
</div>
